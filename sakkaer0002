<button aria-label="ุชุดุบูู/ุฅููุงู ุงูุตูุช" class="mute-btn" onclick="toggleAudio()">โถ๏ธ</button>
<script>
const audio = document.getElementById('bg-audio');
const muteBtn = document.querySelector('.mute-btn');

// Try autoplay (may be blocked by browser); if blocked, show play icon
async function tryAutoplay() {
  try {
    await audio.play();
    // if autoplay played but is muted, show play symbol to indicate user can unmute
    if (audio.muted) {
      muteBtn.textContent = 'โถ๏ธ';
    } else {
      muteBtn.textContent = '๐';
    }
  } catch (err) {
    // Autoplay blocked -- show clear play icon
    console.warn('Autoplay blocked or failed:', err);
    muteBtn.textContent = 'โถ๏ธ';
  }
}

// Toggle play/pause and handle mute/unmute safely
async function toggleAudio() {
  try {
    if (audio.paused) {
      // unmute and set a comfortable volume
      audio.muted = false;
      audio.volume = 0.75;
      await audio.play();
      muteBtn.textContent = '๐';
    } else {
      audio.pause();
      muteBtn.textContent = '๐';
    }
  } catch (err) {
    console.warn('Playback failed:', err);
    // On some browsers, user gesture is required to start audio; show hint
    muteBtn.textContent = 'โถ๏ธ';
  }
}

// Run tryAutoplay when DOM is ready
document.addEventListener('DOMContentLoaded', tryAutoplay);
</script>
