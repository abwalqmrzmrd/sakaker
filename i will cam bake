          <script>
            const libraryIcon = document.getElementById('libraryIcon');
            const libraryContent = document.getElementById('libraryContent');
            const sectionButtons = document.querySelectorAll('.section-btn');
            const sections = document.querySelectorAll('.section-content');
            // ูุชุญ ุงูููุชุจุฉ ุนูุฏ ุงูุถุบุท ุนูู ุงูุฃููููุฉ
            libraryIcon.addEventListener('click', () => {
              libraryContent.style.display = libraryContent.style.display === 'none' ? 'block' : 'none';
              sections.forEach(sec => sec.classList.remove('active'));
            });
            // ุนุฑุถ ุงููุณู ุนูุฏ ุงูุถุบุท ุนููู ูุน ุชุญุฑูู ุงูุตูุญุฉ
            sectionButtons.forEach(btn => {
              btn.addEventListener('click', () => {
                const sectionId = btn.getAttribute('data-section');
                sections.forEach(sec => {
                  if (sec.id === sectionId) {
                    sec.classList.add('active');
                    sec.scrollIntoView({
                      behavior: "smooth",
                      block: "start"
                    });
                  } else {
                    sec.classList.remove('active');
                  }
                });
              });
            });
          </script>
