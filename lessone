function openQuiz() { var m = document.getElementById('quizModal'); if(m) m.style.display='block'; }
function closeQuiz(){ var m = document.getElementById('quizModal'); if(m) m.style.display='none'; document.getElementById('quizContent').innerHTML=''; }
function showQuizTopic(topic){ var el=document.getElementById('quizContent'); if(!el) return; var html=''; if(topic==='medicine'){ html='<h3 style=\"color:#00f;\">Ø§Ù„Ø·Ø¨</h3><p style=\"color:#fff;\">Ø§Ù„Ø·Ø¨ Ø¹Ù„Ù… ÙŠÙ‡ØªÙ… Ø¨ØµØ­Ø© Ø§Ù„Ø¥Ù†Ø³Ø§Ù†...</p>'; } else if(topic==='engineering'){ html='<h3 style=\"color:#00f;\">Ø§Ù„Ù‡Ù†Ø¯Ø³Ø©</h3><p style=\"color:#fff;\">Ø§Ù„Ù‡Ù†Ø¯Ø³Ø© ØªØ·Ø¨ÙŠÙ‚ Ø§Ù„Ø¹Ù„Ù… ÙˆØ§Ù„Ø±ÙŠØ§Ø¶ÙŠØ§Øª...</p>'; } else { html='<h3 style=\"color:#00f;\">Ø§Ù„Ù…ÙˆØ¶ÙˆØ¹</h3><p style=\"color:#fff;\">Ù…Ø­ØªÙˆÙ‰ ØªØ¬Ø±ÙŠØ¨ÙŠ.</p>'; } el.innerHTML=html; }

function openRiddles(){ var m=document.getElementById('riddleModal'); if(m) m.style.display='block'; }
function closeRiddles(){ var m=document.getElementById('riddleModal'); if(m) m.style.display='none'; }
function showRiddleAnswer(n){ var el=document.getElementById('riddleAnswer'+n); if(el) el.style.display = (el.style.display==='none' || el.style.display==='') ? 'block' : 'none'; }

function toggleStory(id){ var s=document.getElementById(id); if(s) s.style.display = (s.style.display==='block') ? 'none' : 'block'; }

/* ÙƒØªÙ…/ØªØ´ØºÙŠÙ„ iframe Ù…ÙˆØ³ÙŠÙ‚Ù‰ */
function toggleMute(id){
  var iframe = document.getElementById(id);
  if(!iframe) return;
  var src = iframe.src;
  if(src.includes("mute=1")) iframe.src = src.replace("mute=1","mute=0");
  else if(src.includes("mute=0")) iframe.src = src.replace("mute=0","mute=1");
  else iframe.src = src + (src.includes('?') ? '&mute=0' : '?mute=0');
}
</script>

