<script>
/* --- ØªÙˆØ­ÙŠØ¯ Ø¯ÙˆØ§Ù„ ÙØªØ­ Ø§Ù„ÙÙŠØ¯ÙŠÙˆ (ÙƒÙ„ Ø§Ù„Ø£ÙŠÙ‚ÙˆÙ†Ø§Øª ØªØ³ØªØ®Ø¯Ù… Ù‡Ø°Ù‡ Ø§Ù„Ø¯ÙˆØ§Ù„) --- */
function openVideo(url){
  // url ÙŠØ¬Ø¨ Ø£Ù† ÙŠÙƒÙˆÙ† Ø±Ø§Ø¨Ø· embed ÙƒØ§Ù…Ù„ Ø£Ùˆ ÙŠØ¨Ø¯Ø£ Ø¨Ù€ https://
  var modal = document.getElementById('videoModal');
  var frame = document.getElementById('videoFrame');
  modal.style.display = 'flex';
  frame.src = url + (url.includes('?') ? '&autoplay=1' : '?autoplay=1');
  modal.setAttribute('aria-hidden','false');
}
function openModal(videoId){
  openVideo('https://www.youtube.com/embed/' + videoId);
}
function openVideoModal(videoUrl){
  openVideo(videoUrl);
}
function closeVideo(){
  var modal = document.getElementById('videoModal');
  var frame = document.getElementById('videoFrame');
  modal.style.display = 'none';
  frame.src = '';
  modal.setAttribute('aria-hidden','true');
}

