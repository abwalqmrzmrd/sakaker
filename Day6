function getTodayFact(){
  const dayIndex = Math.floor(Date.now() / 86400000) % todayFacts.length;
  return todayFacts[dayIndex];
}

function openTodayFact(){
  document.getElementById('folderTitle').innerText = 'ูุนูููุฉ ุงูููู';
  document.getElementById('folderBody').innerHTML = `<p style="font-size:1.2em; line-height:1.6;">${getTodayFact()}</p>`;
  document.getElementById('folderModal').style.display = 'block';
}

