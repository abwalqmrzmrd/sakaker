  // add click handler to the title (works after the innerHTML is set)
  setTimeout(function(){
    var t = document.getElementById('storyTitle');
    if(t){
      t.addEventListener('click', function(){
        var s = document.getElementById('storyText');
        if(!s) return;
        s.style.display = (s.style.display === 'none' || s.style.display === '') ? 'block' : 'none';
      });
    }
  }, 50);
}
