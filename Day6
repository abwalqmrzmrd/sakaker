<script>
function openPuzzle(){
  document.getElementById('puzzleModal').style.display = 'block';
  // reset visibility each time
  document.getElementById('puzzleHint').style.display = 'none';
  document.getElementById('puzzleAnswer').style.display = 'none';
}

function closePuzzle(){
  document.getElementById('puzzleModal').style.display = 'none';
}

function revealHint(){
  document.getElementById('puzzleHint').style.display = 'block';
}

function revealAnswer(){
  document.getElementById('puzzleAnswer').style.display = 'block';
}

