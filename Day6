<script>
function openSports(videoUrl){
  const iframe = document.getElementById('sportsIframe');
  iframe.src = videoUrl + '?autoplay=1&rel=0';
  document.getElementById('sportsModal').style.display = 'block';
}
function closeSports(){
  const iframe = document.getElementById('sportsIframe');
  iframe.src = '';
  document.getElementById('sportsModal').style.display = 'none';
}

