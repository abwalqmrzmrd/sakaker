let quizIndex = 0;
let quizScore = 0;

function startQuiz(){
  quizIndex = 0;
  quizScore = 0;
  document.getElementById('quizModal').style.display = 'block';
  showQuizQuestion();
}

function showQuizQuestion(){
  const q = quizQuestions[quizIndex];
  const quizBody = document.getElementById('quizBody');
  quizBody.innerHTML = `
    <h3>ุณุคุงู ${quizIndex+1} ูู ${quizQuestions.length}</h3>
    <p>${q.q}</p>
    ${q.options.map((opt, i) => `
      <button class="folder-item" onclick="checkQuizAnswer(${i})">${opt}</button>
    `).join('')}
  
<hr>
`;
}

function checkQuizAnswer(selected){
  if(selected === quizQuestions[quizIndex].answer) quizScore++;
  quizIndex++;
  if(quizIndex < quizQuestions.length){
    showQuizQuestion();
  } else {
    showQuizResult();
  }
}

function showQuizResult(){
  const quizBody = document.getElementById('quizBody');
  quizBody.innerHTML = `
    <h3>ุงูุชูู ุงูุงุฎุชุจุงุฑ</h3>
    <p>ูุชูุฌุชู: ${quizScore} ูู ${quizQuestions.length}</p>
    <button class="folder-item" onclick="startQuiz()">ุฅุนุงุฏุฉ ุงููุญุงููุฉ</button>
  
<hr>
`;
}

function closeQuiz(){
  document.getElementById('quizModal').style.display = 'none';
}


function makeFullscreen(){
  const video = document.getElementById('videoPlayer');
  if(video.requestFullscreen){
    video.requestFullscreen();
  } else if(video.webkitRequestFullscreen){
    video.webkitRequestFullscreen();
  } else if(video.msRequestFullscreen){
    video.msRequestFullscreen();
  }
}

