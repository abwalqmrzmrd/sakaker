<script>
function openKitchen(){
  const iframe = document.getElementById('kitchenIframe');
  if(iframe){
    // ุถุน ุฑุงุจุท ุงูููุฏูู ุจุฏูู autoplay - ูู ูุจุฏุฃ ุฅูุง ุจุนุฏ ุถุบุท ุฒุฑ ุงูุชุดุบูู ูู ูุดุบู ุงูููุชููุจ
    iframe.src = 'https://www.youtube.com/embed/GzpSNzVBfKI';
  }
  const modal = document.getElementById('kitchenModal');
  if(modal) modal.style.display = 'block';
}
function closeKitchen(){
  const iframe = document.getElementById('kitchenIframe');
  if(iframe){
    // ุฅุฒุงูุฉ src ูุฅููุงู ุงูููุฏูู ููุฑ ุฅุบูุงู ุงูููุฏุงู
    iframe.src = '';
  }
  const modal = document.getElementById('kitchenModal');
  if(modal) modal.style.display = 'none';
}

