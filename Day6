let riddleIndex = 0;

function nextRiddle(){
  riddleIndex = (riddleIndex + 1) % riddles.length;
  const r = riddles[riddleIndex];
  document.getElementById('puzzleQuestion').innerText = r.q;
  document.getElementById('puzzleHint').innerText = 'ุชูููุญ: ' + r.hint;
  document.getElementById('puzzleAnswer').innerText = 'ุงูุฌูุงุจ: ' + r.a;
  document.getElementById('puzzleHint').style.display = 'none';
  document.getElementById('puzzleAnswer').style.display = 'none';
}

